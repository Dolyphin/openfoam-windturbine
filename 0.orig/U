FoamFile
{
    version     2.0;
    format      ascii;
    class       volVectorField;
    location    "0";
    object      U;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [0 1 -1 0 0 0 0];

internalField   uniform (0 0 1);

boundaryField
{
    upstream_inlet
	{
		type 	fixedValue;
		value	uniform (0 0 1);	
	}
	
	"(upstream_walls|rotating_walls|downstream_walls)"
	{
		type	slip;
	}
	
	rotating_turbine
	{
		type	movingWallVelocity;
		value	uniform (0 0 0);
	}
	
	downstream_turbine
	{
		type	noSlip;
	}
	
	downstream_outlet
	{
		type	zeroGradient;
		value	uniform (0 0 1);
	}
	
	".*_ami"
	{
		type	cyclicAMI;
		value	uniform (0 0 1);
	}
}


