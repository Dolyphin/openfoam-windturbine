FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "system";
    object      controlDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

application     pimpleDyMFoam;

startFrom       latestTime;
startTime       0;

stopAt          endTime;
endTime         0.5;

deltaT          1e-3;
writeControl    timeStep;
writeInterval   1;
purgeWrite      50;

writeFormat     binary;
writePrecision  6;
writeCompression off;

timeFormat      general;
timePrecision   6;

runTimeModifiable true;

adjustTimeStep  yes;
maxCo           50;

functions
{
    forces
	{
		type          forces;
		libs          ("libforces.so");

		writeControl  timeStep;
		timeInterval  1;

		log           yes;

		patches       ("rotating_turbine");
		rho           rhoInf;     // Indicates incompressible
		log           true;
		rhoInf        1.2;          // Redundant for incompressible

		CofR          (0 0 0);    // Rotation around centre line of propeller
		pitchAxis     (0 0 1);
	}
}

